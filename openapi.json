{
  "openapi": "3.1.0",
  "info": {
    "title": "GitHub File Proxy + Promote Patch Tool",
    "version": "1.2.0",
    "description": "Fetch GitHub repo files and generate patch metadata for AI-native delivery."
  },
  "servers": [
    {
      "url": "https://ai-concussion-agent-production.up.railway.app",
      "description": "Production server"
    }
  ],
  "paths": {
    "/repos/{owner}/{repo}/contents/{path}": {
      "get": {
        "operationId": "getGitHubFile",
        "summary": "Fetch a single file from a GitHub repo",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "owner", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "repo", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "path", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "ref", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "GitHub file content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "path": { "type": "string" },
                    "sha": { "type": "string" },
                    "content": {
                      "type": "string",
                      "format": "byte",
                      "description": "Base64-encoded content"
                    },
                    "encoding": { "type": "string" }
                  },
                  "required": ["name", "path", "content"]
                }
            }
          },
          "404": { "description": "File not found" }
        }
      }
    },
    "/batch-files": {
      "post": {
        "operationId": "getBatchFiles",
        "summary": "Fetch multiple files from a GitHub repo",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "owner": { "type": "string" },
                  "repo": { "type": "string" },
                  "paths": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "ref": { "type": "string" }
                },
                "required": ["owner", "repo", "paths"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Multiple file contents returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "files": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "path": { "type": "string" },
                          "content": {
                            "type": "string",
                            "format": "byte",
                            "description": "Base64-encoded content"
                          },
                          "error": { "type": "string" }
                        },
                        "required": ["path"]
                      }
                    }
                  },
                  "required": ["files"]
                }
              }
            }
          }
        }
      }
    }
    },
    "/tasks/update-metadata": {
      "post": {
        "operationId": "updateTaskMetadata",
        "summary": "Update metadata fields for a task",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "task_id": {
                    "type": "string",
                    "description": "ID of the task to update"
                  },
                  "fields": {
                    "type": "object",
                    "description": "Key-value pairs of metadata fields to update"
                  }
                },
                "required": ["task_id", "fields"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated task.yaml content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "task_id": { "type": "string" },
                    "task_yaml": { "type": "string" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          }
        }
      }
    }
  },
  "/tasks/list": {
    "get": {
      "summary": "List tasks from GitHub task.yaml",
      "operationId": "listTasks",
      "parameters": [
        {
          "name": "status",
          "in": "query",
          "description": "Filter tasks by status (e.g. 'pending', 'done')",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "pod_owner",
          "in": "query",
          "description": "Filter tasks by pod_owner (e.g. 'DevPod', 'QAPod')",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "category",
          "in": "query",
          "description": "Filter tasks by category (e.g. 'dev', 'qa', 'discovery')",
          "required": false,
          "schema": {
            "type": "string"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "List of tasks",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tasks": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "Error fetching task.yaml"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {}
  }
}
