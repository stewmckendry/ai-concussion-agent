{
  "openapi": "3.1.0",
  "info": {
    "title": "GitHub File Proxy + Promote Patch Tool",
    "version": "1.1.0",
    "description": "Fetch GitHub repo files and generate patch metadata for AI-native delivery."
  },
  "servers": [
    {
      "url": "https://ai-concussion-agent-production.up.railway.app",
      "description": "Production server"
    }
  ],
  "paths": {
    "/repos/{owner}/{repo}/contents/{path}": {
      "get": {
        "operationId": "getGitHubFile",
        "summary": "Fetch a single file from a GitHub repo",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          { "name": "owner", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "repo", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "path", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "ref", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "GitHub file content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "path": { "type": "string" },
                    "sha": { "type": "string" },
                    "content": {
                      "type": "string",
                      "format": "byte",
                      "description": "Base64-encoded content"
                    },
                    "encoding": { "type": "string" }
                  },
                  "required": ["name", "path", "content"]
                }
              }
            }
          },
          "404": {
            "description": "File not found"
          }
        }
      }
    },
    "/batch-files": {
      "post": {
        "operationId": "getBatchFiles",
        "summary": "Fetch multiple files from a GitHub repo",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "owner": { "type": "string" },
                  "repo": { "type": "string" },
                  "paths": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "ref": { "type": "string" }
                },
                "required": ["owner", "repo", "paths"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Multiple file contents returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "files": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "path": { "type": "string" },
                          "content": {
                            "type": "string",
                            "format": "byte",
                            "description": "Base64-encoded content"
                          },
                          "error": { "type": "string" }
                        },
                        "required": ["path"]
                      }
                    }
                  },
                  "required": ["files"]
                }
              }
            }
          }
        }
      }
    },
    "/promote_patch": {
      "post": {
        "operationId": "promotePatch",
        "summary": "Generate a patch file and metadata from AI-generated task output",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["task_id", "summary", "output_folders"],
                "properties": {
                  "task_id": {
                    "type": "string",
                    "description": "The ID of the task this patch belongs to (e.g. '2.3_build_metrics_tool')"
                  },
                  "summary": {
                    "type": "string",
                    "description": "Short summary of the patch contents"
                  },
                  "output_folders": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "List of folders where files were generated (based on task.yaml.outputs)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Patch and metadata created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["patch_file", "task_id", "summary", "output_folders"],
                  "properties": {
                    "patch_file": {
                      "type": "string",
                      "description": "Path to the generated patch file"
                    },
                    "task_id": {
                      "type": "string"
                    },
                    "summary": {
                      "type": "string"
                    },
                    "output_folders": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Example response",
                    "value": {
                      "patch_file": ".patches/patch_20250422_103045_2.3_build_metrics_tool.diff",
                      "task_id": "2.3_build_metrics_tool",
                      "summary": "Fixes logic in metrics computation",
                      "output_folders": ["src", "docs"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/patches/{patch_name}": {
      "get": {
        "operationId": "getPatchFile",
        "summary": "Fetch a patch file by name",
        "parameters": [
          {
            "name": "patch_name",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Name of the patch file (e.g. patch_20250422_103045.diff)"
          }
        ],
        "responses": {
          "200": {
            "description": "Raw patch file returned",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "description": "Raw unified diff content"
                },
                "examples": {
                  "example": {
                    "summary": "Example diff",
                    "value": "--- a/file.txt\n+++ b/file.txt\n@@ -1 +1 @@\n-Hello\n+Hello world"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Patch not found"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {}
  }
}
