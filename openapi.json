{
  "openapi": "3.1.0",
  "info": {
    "title": "GitHub File Proxy + Promote Patch Tool",
    "version": "1.2.0",
    "description": "Fetch GitHub repo files and generate patch metadata for AI-native delivery."
  },
  "servers": [
    {
      "url": "https://ai-concussion-agent-production.up.railway.app",
      "description": "Production server"
    }
  ],
  "paths": {
    "/repos/{owner}/{repo}/contents/{path}": {
      "get": {
        "operationId": "getGitHubFile",
        "summary": "Fetch a single file from a GitHub repo",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "owner", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "repo", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "path", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "ref", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "GitHub file content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "path": { "type": "string" },
                    "sha": { "type": "string" },
                    "content": {
                      "type": "string",
                      "format": "byte",
                      "description": "Base64-encoded content"
                    },
                    "encoding": { "type": "string" }
                  },
                  "required": ["name", "path", "content"]
                }
              }
            }
          },
          "404": { "description": "File not found" }
        }
      }
    },
    "/batch-files": {
      "post": {
        "operationId": "getBatchFiles",
        "summary": "Fetch multiple files from a GitHub repo",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "owner": { "type": "string" },
                  "repo": { "type": "string" },
                  "paths": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "ref": { "type": "string" }
                },
                "required": ["owner", "repo", "paths"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Multiple file contents returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "files": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "path": { "type": "string" },
                          "content": {
                            "type": "string",
                            "format": "byte",
                            "description": "Base64-encoded content"
                          },
                          "error": { "type": "string" }
                        },
                        "required": ["path"]
                      }
                    }
                  },
                  "required": ["files"]
                }
              }
            }
          }
        }
      }
    },
    "/promote_patch": {
      "post": {
        "operationId": "promotePatch",
        "summary": "Generate a patch file and metadata from AI-generated task output",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["task_id", "summary", "output_folders", "diff"],
                "properties": {
                  "task_id": { "type": "string" },
                  "summary": { "type": "string" },
                  "output_folders": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "diff": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Patch and metadata created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["patch_file", "task_id", "summary", "output_folders", "download_url", "metadata_url"],
                  "properties": {
                    "patch_file": { "type": "string" },
                    "task_id": { "type": "string" },
                    "summary": { "type": "string" },
                    "output_folders": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "download_url": {
                      "type": "string",
                      "format": "uri"
                    },
                    "metadata_url": {
                      "type": "string",
                      "format": "uri"
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Example patch output",
                    "value": {
                      "patch_file": "patch_20250422.diff",
                      "task_id": "task_123",
                      "summary": "Fix API schema bug",
                      "output_folders": ["src", "docs"],
                      "download_url": "https://your-domain.com/patches/patch_20250422.diff",
                      "metadata_url": "https://your-domain.com/patches/patch_20250422.json"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/patches/{patch_name}": {
      "get": {
        "operationId": "getPatchFile",
        "summary": "Fetch a patch file by name",
        "parameters": [
          {
            "name": "patch_name",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Raw patch file content",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "description": "Raw unified diff content"
                }
              }
            }
          },
          "404": {
            "description": "Patch not found"
          }
        }
      }
    },
    "/validate_diff": {
      "post": {
        "operationId": "validateDiff",
        "summary": "Validate whether a raw unified diff file is well-formed",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["diff"],
                "properties": {
                  "diff": {
                    "type": "string",
                    "description": "Raw unified diff content to be validated"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validation result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["valid", "message"],
                  "properties": {
                    "valid": { "type": "boolean" },
                    "message": { "type": "string" }
                  }
                },
                "examples": {
                  "valid": {
                    "summary": "Valid diff",
                    "value": {
                      "valid": true,
                      "message": "Patch is valid."
                    }
                  },
                  "invalid": {
                    "summary": "Invalid diff",
                    "value": {
                      "valid": false,
                      "message": "Patch is malformed at line 42"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/validate_hunk_length": {
      "post": {
        "operationId": "validateHunkLength",
        "summary": "Validate declared vs actual line counts in each patch hunk",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "diff": { "type": "string" }
                },
                "required": ["diff"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validation result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["valid", "errors"],
                  "properties": {
                    "valid": { "type": "boolean" },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "hunk": { "type": "string" },
                          "expected": { "type": "integer" },
                          "found": { "type": "integer" }
                        },
                        "required": ["hunk", "expected", "found"]
                      }
                    }
                  }
                },
                "examples": {
                  "error": {
                    "summary": "Hunk mismatch",
                    "value": {
                      "valid": false,
                      "errors": [
                        {
                          "hunk": "@@ -1,15 +1,53 @@",
                          "expected": 53,
                          "found": 41
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {}
  }
}
