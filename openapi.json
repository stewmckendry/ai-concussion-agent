{
  "openapi": "3.1.0",
  "info": {
    "title": "GitHub File Reader",
    "description": "Fetch file contents from GitHub repos.",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://ai-concussion-agent-production.up.railway.app",
      "description": "Production server"
    }
  ],
  "paths": {
    "/repos/{owner}/{repo}/contents/{path}": {
      "get": {
        "operationId": "getGitHubFile",
        "summary": "Get a file from a GitHub repo",
        "parameters": [
          {
            "name": "owner",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "repo",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "ref",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "File found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "path": { "type": "string" },
                    "sha": { "type": "string" },
                    "content": {
                      "type": "string",
                      "description": "Base64-encoded file contents"
                    },
                    "encoding": { "type": "string" }
                  },
                  "required": ["name", "path", "content"]
                }
              }
            }
          },
          "404": {
            "description": "File not found"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {}
  }
}
